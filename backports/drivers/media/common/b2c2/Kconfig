config BACKPORT_DVB_B2C2_FLEXCOP
	tristate
	depends on !DVB_B2C2_FLEXCOP
	depends on BACKPORT_DVB_CORE && I2C
	depends on DVB_B2C2_FLEXCOP_PCI || BACKPORT_DVB_B2C2_FLEXCOP_USB
	default y
	select DVB_PLL if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_STV0299 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_MT352 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_MT312 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_NXT200X if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_STV0297 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_BCM3510 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_LGDT330X if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_S5H1420 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_TUNER_ITD1000 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_ISL6421 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_CX24123 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_SIMPLE if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_TUNER_CX24113 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT

# Selected via the PCI or USB flexcop drivers
config BACKPORT_DVB_B2C2_FLEXCOP_DEBUG
	bool
	depends on !DVB_B2C2_FLEXCOP_DEBUG
