config BACKPORT_VIDEO_CX23885
	tristate "Conexant cx23885 (2388x successor) support"
	depends on !VIDEO_CX23885
	depends on DVB_CORE && BACKPORT_VIDEO_DEV && PCI && I2C && INPUT && SND
	depends on SND_PCM
	depends on I2C_ALGOBIT
	select BACKPORT_VIDEO_TUNER
	select BACKPORT_VIDEO_TVEEPROM
	depends on BACKPORT_RC_CORE
	select BACKPORT_VIDEOBUF2_DVB
	select BACKPORT_VIDEOBUF2_DMA_SG
	select BACKPORT_VIDEO_CX25840
	select BACKPORT_VIDEO_CX2341X
	select DVB_DIB7000P if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_DRXK if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_S5H1409 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_S5H1411 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_LGDT330X if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_ZL10353 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_TDA10048 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_LNBP21 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_STV090x if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_STB6100 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_STV6110 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_CX24116 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_CX24117 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_STV0900 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_DS3000 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_TS2020 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_STV0367 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_TDA10071 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_A8293 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_MB86A20S if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_SI2165 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_SI2168 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_M88DS3103 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_MT2063 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_MT2131 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_XC2028 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_TDA8290 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_TDA18271 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_XC5000 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_SI2157 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_M88RS6000T if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_TUNER_DIB0070 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	---help---
	  This is a video4linux driver for Conexant 23885 based
	  TV cards.

	  To compile this driver as a module, choose M here: the
	  module will be called cx23885

config BACKPORT_MEDIA_ALTERA_CI
	tristate "Altera FPGA based CI module"
	depends on !MEDIA_ALTERA_CI
	depends on VIDEO_CX23885 && BACKPORT_DVB_CORE
	depends on ALTERA_STAPL
	---help---
	  An Altera FPGA CI module for NetUP Dual DVB-T/C RF CI card.

	  To compile this driver as a module, choose M here: the
	  module will be called altera-ci
