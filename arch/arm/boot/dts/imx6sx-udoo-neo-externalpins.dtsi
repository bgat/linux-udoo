/ {

	codec_dac: dac-codec {
		compatible = "udoo,es9023";
		status = "disabled";
	};

	sound_dac {
		compatible = "udoo,imx-audio-es9023";
		model = "imx6sx-es9023";
		cpu-dai = <&ssi1>;
		audio-codec = <&codec_dac>;
		mux-int-port = <1>;
		mux-ext-port = <6>;
		ssi-controller = <&ssi1>;
		status = "disabled";
	};
	
	sound_spdif {
		compatible = "fsl,imx-audio-spdif";
		model = "imx-spdif";
		spdif-controller = <&spdif>;
		spdif-out;
		status = "disabled";
	};

